<link rel="stylesheet" type="text/css" href="/css/global.css">
<html>

<head>
	 <title><%= @title %></title>
</head>

<body>
	<div class="main">

		<div class="navigation">
			<div class="navigation__link"><a href="/">Home</a></div><br>
			<div class="navigation__link"><a href="/add">Add Pokemon</a></div><br>
			<div class="navigation__link"><a href="/viewall">View All Pokemon</a></div>
		</div>

		<div class="center">
<!-- The `yield` below is where the contents of a view file are put. -->
<!-- Then the combined layout + view is sent back to the client. -->
<%= yield %>
		</div>

		<div class="searchBox">
			<div class="search">
				<form>
					<input action="/viewall" method="get" name="search" type="text" placeholder="Search Pokemon..." class="search__input" required><span class="search__icon"><img src="/images/searchIcon.png"></span>
				</form>
			</div>
		</div>
	</div>
</body>
