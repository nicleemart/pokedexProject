<% @title="Add New Pokemon" %>

<div class="header">
	Add New Pokemon
</div>

<div class="form">
	<form action="/view">
		<div class="form__input">Name: <input type="text" name="name"></div>
		<div class="form__input">Height: <input type="text" name="height"></div>
		<div class="form__input">Weight: <input type="text" name="weight"></div>
		<div class="form__input">Gender: <input type="text" name="gender"></div>
		<div class="form__input">Type: <input type="text" name="type"></div>
		<div class="form__input">CP: <input type="text" name="cp"></div>
		<div class="form__input">HP: <input type="text" name="hp"></div>
		<div class="form__input">Favorite? <input type="checkbox" name="favorite"></div>
		<input type="submit" value="Submit">
	</form>
</div>